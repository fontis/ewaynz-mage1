<config>
    <modules>
        <Fontis_EwayNz>
            <version>1.0.1</version>
        </Fontis_EwayNz>
    </modules>
    <global>
        <models>
            <ewaynz>
                <class>Fontis_EwayNz_Model</class>
            </ewaynz>
        </models>
        <blocks>
            <ewaynz>
                <class>Fontis_EwayNz_Block</class>
            </ewaynz>
        </blocks>
        <helpers>
            <ewaynz>
                <class>Fontis_EwayNz_Helper</class>
            </ewaynz>
        </helpers>
        <payment>
            <cc>
                <types>
                    <JCB>
                        <code>JCB</code>
                        <name>JCB</name>
                        <order>50</order>
                    </JCB>
                    <DICL>
                        <code>DICL</code>
                        <name>Diners Club</name>
                        <order>60</order>
                    </DICL>
                </types>
            </cc>
        </payment>
    </global>
    <frontend>
        <secure_url>
            <ewaynz>/ewaynz/shared</ewaynz>
        </secure_url>
        <routers>
            <ewaynz>
                <use>standard</use>
                <args>
                    <module>Fontis_EwayNz</module>
                    <frontName>ewaynz</frontName>
                </args>
            </ewaynz>
        </routers>
        <translate>
            <modules>
                <Fontis_EwayNz>
                    <files>
                        <default>Fontis_EwayNz.csv</default>
                    </files>
                </Fontis_EwayNz>
            </modules>
        </translate>
        <layout>
            <updates>
                <ewaynz>
                    <file>fontis_ewaynz.xml</file>
                </ewaynz>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Fontis_EwayNz>
                    <files>
                        <default>Fontis_EwayNz.csv</default>
                    </files>
                </Fontis_EwayNz>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <ewaynz>
                <active>0</active>
                <customer_id backend_model="adminhtml/system_config_backend_encrypted"/>
                <username backend_model="adminhtml/system_config_backend_encrypted"/>
                <currency>NZD</currency>
                <model>ewaynz/shared</model>
                <title>Credit Card</title>
                <order_status>processing</order_status>
                <allowspecific>0</allowspecific>
            </ewaynz>
        </payment>
    </default>
</config>
